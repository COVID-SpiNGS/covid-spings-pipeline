From: continuumio/miniconda3

%post
    rm -rf pipelinex
    mkdir ./pipelinex
    apt update
    apt-get install curl -y
    apt-get install wget -y
    conda update -n base -c defaults conda
    conda init bash
    /opt/conda/bin/conda create --name nanosim python=3.7 --yes
    /opt/conda/bin/conda activate nanosim && conda install --file requirements.txt -c conda-forge -c bioconda --yes
    /opt/conda/bin/conda activate base

    


