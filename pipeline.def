Bootstrap: library
From: ubuntu:latest

%post
    rm -rf pipelinex
    mkdir ./pipelinex
    apt update
    apt-get install curl -y
    apt-get install wget -y
    wget https://repo.anaconda.com/archive/Anaconda3-2022.05-Linux-x86_64.sh -O ~/anaconda.sh
    bash ~/anaconda.sh -b -p $HOME/anaconda
    eval "$(conda shell.bash hook)"
    conda create --name nanosim python=3.7 --yes
    conda activate nanosim && conda install --file fixed_requirements.txt -c conda-forge -c bioconda --yes
    cd .. && conda activate base
    


%files
    fixed_requirements.txt requirements.txt


%startscript
    ls -la

%runscript
    ls -la  