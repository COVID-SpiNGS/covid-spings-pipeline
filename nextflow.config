conda.enabled = true
process.conda = "$baseDir/nanosim_env.yml"
conda.useMamba = true

params {
  baseDir           = "${PWD}"
  covidRefDir       = "${PWD}/data/covid/"
  humanGenomeRefDir = "${PWD}/data/human_genome"
  nanoSimOutputDir  = "${PWD}/data/NanoSim_output/"
  nanoSimScriptsDir = "${PWD}/modules/simulation/NanoSim/src/"
  nanoSimConfigDir  = "${PWD}/modules/simulation/config_files/"
  inputDir          = "${PWD}/../data/covid-spings/input"
  outputDir         = "${PWD}/../../data/covid-spings/output"
  covidURL1         = "https://eutils.ncbi.nlm.nih.gov/entrez/eutils/efetch.fcgi?db=nuccore&id=OX463106&rettype=fasta&retmode=text"
  covidURL2         = "https://eutils.ncbi.nlm.nih.gov/entrez/eutils/efetch.fcgi?db=sra&id=ERX4077913&rettype=fastq&retmode=text"
  logDir            = "${PWD}/logs"
}
