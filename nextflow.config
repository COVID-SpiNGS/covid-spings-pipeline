params {
  watchPath         = "${PWD}/input/*.fastq"
  reference         = "${PWD}/input/reference.fasta"
  referenceIndex    = "${PWD}/input/reference.fasta.fai"

  publishDir        = "${PWD}/output"
  bamFile           = "merge.bam"
  bamIndexFile      = "merge.bam.bai"
  vcfFile           = "output.vcf"
  vcfReportFile     = "output.visual_report.html"
  help              = false
}

singularity {
  enabled           = true
  autoMounts        = true
}

manifest {
  name              = "christophstach/live-pipeline-nextflow"
  author            = "Christoph Stach"
  description       = "Live pipeline"
  mainScript        = "main.nf"
  version           = "1.0.0"
}