params {
  watchPath         = "${PWD}/input/*.fastq"
  reference         = "${PWD}/input/reference.fasta"
  referenceIndex    = "${PWD}/input/reference.fasta.fai"

  publishDir        = "${PWD}/output"
  bamFile           = "final.bam"
  bamIndexFile      = "final.bam.bai"
  help              = false
}

singularity {
  enabled           = true
  autoMounts        = true
}

manifest {
  name              = "christophstach/live-pipeline-nextflow"
  author            = "Christoph Stach"
  description       = "Live pipeline nextflow"
  mainScript        = "main.nf"
  version           = "1.0.0"
}


proccess {
  cpus              = 8
}

executor {
  name              = "local"
  memory            = "12 GB"
  queueSize         = 1
}